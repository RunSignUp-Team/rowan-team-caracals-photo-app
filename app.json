{
  "expo": {
    "name": "media-app",
    "slug": "media-app",
    "scheme": "run-media-up",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/brand/logo-text.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/brand/logo-text.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
      "NSCameraUsageDescription": "$(PRODUCT_NAME) needs access to your Camera.",
      "NSMicrophoneUsageDescription": "$(PRODUCT_NAME) needs access to your Microphone."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/brand/logo-circle.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/brand/logo-circle.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router"
    ],
    
      "expo-camera":
      {
         "cameraPermission": "Allow $(PRODUCT_NAME) to access your Camera."
       }
    
  }
}
